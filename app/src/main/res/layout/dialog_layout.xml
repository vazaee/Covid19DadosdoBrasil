<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/dialog_cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Confirmados"
            android:textColor="#3F51B5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cases_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/square"
            android:drawablePadding="5dp"
            android:drawableTint="#3F51B5"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:text="Dados" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_refuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descartados"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/refuses_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/square"
            android:drawablePadding="5dp"
            android:drawableTint="#4CAF50"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:text="Dados" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_suspects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suspeitos"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/suspects_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/square"
            android:drawablePadding="5dp"
            android:drawableTint="#FF9800"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:text="Dados" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_deaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mortes"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#ef5350"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deaths_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/square"
            android:drawablePadding="5dp"
            android:drawableTint="#ef5350"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#ef5350"
            android:text="Dados" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/last_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ultima Atualização:"
            android:textColor="#9e9e9e"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

        <TextView

            android:id="@+id/date_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom"
            android:layout_marginBottom="4dp"
            android:textColor="#9e9e9e"
            android:text="Dados" />

    </LinearLayout>

</LinearLayout>